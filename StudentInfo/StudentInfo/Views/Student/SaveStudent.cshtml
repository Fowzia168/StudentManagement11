@using StudentInfo.Models
@model StudentInfo.Models.Student

@{
    ViewBag.Title = "SaveStudent";
    List<StudentClass> ClassList = ViewBag.ClassList;
    string message = ViewBag.message;
    Layout = null;
    
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   
    <style>
        
        .main {
            max-width: 500px;
            margin: auto;
           
        }
         .input-validation-error {
             border: 2px solid red;
         }

        .field-validation-error {
            color: red;
            font-style: italic;
        }

        .button {
            background-color: #4c51af91;
          
            border: black;
            color: black;
            padding: 15px 72px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            -webkit-transition-duration: 0.4s; /* Safari */
            transition-duration: 0.4s;
        }
        .button2:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
        }

    </style>
</head>
<body>
    <div class="main">
        @using (@Html.BeginForm())
        {
            <legend><u>
                <h2>Add New Student</h2></u></legend>




            <table>
                <tr>
                    <td>@Html.LabelFor(x => x.StudentName)</td>
                    <td>
                        @Html.TextBoxFor(x => x.StudentName, new { @class = "required" })
                    </td>
                    <td>
                        @Html.ValidationMessageFor(x => x.StudentName)
                    </td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(x => x.Address)</td>
                    <td>
                        @Html.TextAreaFor(x => x.Address, new {@class = "required"  })
                    </td>
                    <td>
                        @Html.ValidationMessageFor(x => x.Address)
                    </td>
                </tr>


                <tr>
                    <td>@Html.LabelFor(x => x.AdmissionDate)</td>
                    <td>
                        @Html.TextBoxFor(x => x.AdmissionDate, new { @class = "required", @type = "date" })
                    </td>
                    <td>
                        @Html.ValidationMessageFor(x => x.AdmissionDate)
                    </td>
                </tr>




                <tr>
                    <td><label for="Class"> Class</label></td>
                    <td>
                        <select id="Class" name="Class" required >
                            <option value="">--Select--</option>
                            @foreach (StudentClass studentClass in ViewBag.ClassList)
                            {
                                <option value="@studentClass.Id">@studentClass.ClassName</option>
                            }
                        </select>
                    </td>
                </tr>


              





            </table>

                       



            <div style="padding-left: 300px;">
                <input type="submit" value="Save" class="button button2"/>
                <button type="button" class="button button2" onclick="location.href = '@Url.Action("Index", "StudentView")'">Student_Details</button>
            </div>




        }
    </div>


        <script src="~/Scripts/jquery-1.10.2.min.js"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
